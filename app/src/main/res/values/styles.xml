<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FlashCardSpecimenStyle">
        <item name="android:textSize">18pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlashCardTypeStyle">
        <item name="android:textSize">14pt</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FlashCardTranslationStyle">
        <item name="android:textSize">14pt</item>
    </style>

    <style name="AddEntryActivityTextSyle">
        <item name="android:textSize">10pt</item>
        <item name="android:color">#FF3434</item>
    </style>

    <style name="ReviewCardSpecimenTextStyle">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ReviewCardTypeTextStyle">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ReviewCardTranslationTextStyle">
        <item name="android:textSize">11pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CounterTextFlashCardActivity">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
